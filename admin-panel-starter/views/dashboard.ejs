<% 
const title = 'Dashboard';
const body = `
<div class="row">
    <div class="col-md-3 mb-4">
        <div class="card text-center">
            <div class="card-body">
                <i class="fas fa-shopping-cart fa-2x text-primary mb-3"></i>
                <h5>Total Orders</h5>
                <h2 class="text-primary">${stats.totalOrders || 0}</h2>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-4">
        <div class="card text-center">
            <div class="card-body">
                <i class="fas fa-dollar-sign fa-2x text-success mb-3"></i>
                <h5>Revenue</h5>
                <h2 class="text-success">₹${(stats.totalRevenue || 0).toLocaleString()}</h2>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-4">
        <div class="card text-center">
            <div class="card-body">
                <i class="fas fa-box fa-2x text-info mb-3"></i>
                <h5>Products</h5>
                <h2 class="text-info">${stats.totalProducts || 0}</h2>
            </div>
        </div>
    </div>
    
    <div class="col-md-3 mb-4">
        <div class="card text-center">
            <div class="card-body">
                <i class="fas fa-users fa-2x text-warning mb-3"></i>
                <h5>Users</h5>
                <h2 class="text-warning">${stats.totalUsers || 0}</h2>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-chart-line me-2"></i>Sales Analytics</h5>
            </div>
            <div class="card-body">
                <canvas id="salesChart" height="100"></canvas>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-list me-2"></i>Recent Orders</h5>
            </div>
            <div class="card-body">
                ${orders && orders.length > 0 ? orders.slice(0, 5).map(order => `
                    <div class="d-flex justify-content-between align-items-center mb-2 p-2 border-bottom">
                        <div>
                            <strong>#${order.orderNumber || order._id}</strong><br>
                            <small class="text-muted">${order.user?.name || 'Unknown'}</small>
                        </div>
                        <div class="text-end">
                            <span class="badge bg-${order.status === 'delivered' ? 'success' : order.status === 'pending' ? 'warning' : 'info'}">${order.status}</span><br>
                            <small>₹${(order.totalPrice || 0).toLocaleString()}</small>
                        </div>
                    </div>
                `).join('') : '<p class="text-muted">No recent orders</p>'}
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
// Sales Chart
const ctx = document.getElementById('salesChart').getContext('2d');
const salesChart = new Chart(ctx, {
    type: 'line',
    data: {
        labels: ${JSON.stringify(analytics?.salesData?.map(item => item._id) || [])},
        datasets: [{
            label: 'Revenue',
            data: ${JSON.stringify(analytics?.salesData?.map(item => item.revenue) || [])},
            borderColor: '#667eea',
            backgroundColor: 'rgba(102, 126, 234, 0.1)',
            tension: 0.4
        }]
    },
    options: {
        responsive: true,
        maintainAspectRatio: false,
        scales: {
            y: {
                beginAtZero: true,
                ticks: {
                    callback: function(value) {
                        return '₹' + value.toLocaleString();
                    }
                }
            }
        }
    }
});
</script>
`;
%>

<%- include('layout', { title, body, currentPage: 'dashboard' }) %>